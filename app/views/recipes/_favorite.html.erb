<% if user_signed_in? %>
  <% if @recipe.user_id != current_user.id %>
    <% if !Favorite.exists?(user_id:current_user.id,recipe_id:@recipe.id) %>
      <%= link_to "❤︎",recipe_favorites_path(@recipe.id), class: "favorite-button", method: :post, remote: true %>
    <% else %>
      <%= link_to "❤︎",recipe_favorites_path(@recipe.id), class: "favorite-button", id: "favorite-destroy", method: :delete, remote: true %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to "❤︎",new_user_session_path, class: "favorite-button" %>
<% end %>